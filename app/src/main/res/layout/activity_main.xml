<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="user"
                type="com.example.anketakotlin.User">

        </variable>
    </data>
    <android.support.constraint.ConstraintLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


        <TextView
                android:hint="Name"
                android:id="@+id/twMainName"
                android:text="@{user.name}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/twMainNameValue"
                android:text="NameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/twMainName"/>
        <TextView
                android:hint="Surname"
                android:id="@+id/twMainSurname"
                android:text="@{user.surname}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/twMainNameValue"/>
        <TextView
                android:text="SurnameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twMainSurnameValue"
                app:layout_constraintTop_toBottomOf="@+id/twMainSurname"/>
        <TextView
                android:hint="Age"
                android:text="@{String.valueOf(user.age)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twMainAge"
                app:layout_constraintTop_toBottomOf="@+id/twMainSurnameValue"/>
        <TextView
                android:text="AgeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twMainAgeValue"
                app:layout_constraintTop_toBottomOf="@+id/twMainAge"/>
        <TextView
                android:hint="Other"
                android:text="@{user.other}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twMainOther"
                app:layout_constraintTop_toBottomOf="@+id/twMainAgeValue"/>
        <TextView
                android:text="OtherValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twMainOtherValue"
                app:layout_constraintTop_toBottomOf="@+id/twMainOther"/>
        <Button
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>